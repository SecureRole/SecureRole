\usepackage{xcolor}
\usepackage[many]{tcolorbox}

\definecolor{verylightblue}{RGB}{245,243,253}
\definecolor{lightblue}{RGB}{91,194,224}

\definecolor{lightred}{RGB}{255,45,45}
\definecolor{verylightred}{RGB}{255,190,190}

\definecolor{lightyellow}{RGB}{255,230,0}
\definecolor{verylightyellow}{RGB}{255,230,180}

\newtcolorbox{hint}[1][]{
  breakable,
  freelance,
  title=#1,
  colback=verylightblue,
  colbacktitle=verylightblue,
  coltitle=black,
  fonttitle=\bfseries,
  bottomrule=0pt,
  boxrule=0pt,
  colframe=white,
  overlay unbroken and first={
  \draw[lightblue,line width=3pt]
    ([xshift=5pt]frame.north west) -- 
    (frame.north west) -- 
    (frame.south west);
  \draw[lightblue,line width=3pt]
    ([xshift=-5pt]frame.north east) -- 
    (frame.north east) -- 
    (frame.south east);
  },
  overlay unbroken app={
  \draw[lightblue,line width=3pt,line cap=rect]
    (frame.south west) -- 
    ([xshift=5pt]frame.south west);
  \draw[lightblue,line width=3pt,line cap=rect]
    (frame.south east) -- 
    ([xshift=-5pt]frame.south east);
  },
  overlay middle and last={
  \draw[lightblue,line width=3pt]
    (frame.north west) -- 
    (frame.south west);
  \draw[lightblue,line width=3pt]
    (frame.north east) -- 
    (frame.south east);
  },
  overlay last app={
  \draw[lightblue,line width=3pt,line cap=rect]
    (frame.south west) --
    ([xshift=5pt]frame.south west);
  \draw[lightblue,line width=3pt,line cap=rect]
    (frame.south east) --
    ([xshift=-5pt]frame.south east);
  },
}

